apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRole
metadata:
  name: template:view
  namespace: "{{ meta.namespace | default(validator_namespace) }}"
  labels:
    kubevirt.io: ""
rules:
  - apiGroups:
      - template.openshift.io
    resources:
      - templates
    verbs:
      - get
      - list
      - watch
